MACRO(USE_GOOGLEPERFTOOLS)
  SET(GOOGLEPERFTOOLS_FIND_REQUIRED TRUE)
  FIND_PACKAGE(GOOGLEPERFTOOLS)
  IF ((NOT GOOGLEPERFTOOLS_FOUND))
    MESSAGE("Skipping because of missing GooglePerfTools")
    RETURN()
  ENDIF((NOT GOOGLEPERFTOOLS_FOUND))
  IF(NOT GooglePerfTools_USED AND GOOGLEPERFTOOLS_FOUND)
    SET(GooglePerfTools_USED TRUE)
    INCLUDE_DIRECTORIES(${GOOGLEPERFTOOLS_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${GOOGLEPERFTOOLS_TCMALLOC_LIBRARY} ${GOOGLEPERFTOOLS_PROFILER_LIBRARY})
  ENDIF()
ENDMACRO(USE_GOOGLEPERFTOOLS)
