MACRO(USE_DTOO)
  SET(DTOO_FIND_REQUIRED FALSE) 
  FIND_PACKAGE(DTOO)
  IF ((NOT DTOO_FOUND))
    USING_MESSAGE("Skipping because of missing DTOO")
    RETURN()
  ENDIF((NOT DTOO_FOUND))
  IF(NOT DTOO_USED AND DTOO_FOUND)
    SET(DTOO_USED TRUE)
    INCLUDE_DIRECTORIES(${DTOO_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${DTOO_LIBRARIES})
  ENDIF()
ENDMACRO(USE_DTOO)
