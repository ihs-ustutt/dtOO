MACRO(USE_OPENMESH)
  SET(OPENMESH_FIND_REQUIRED FALSE)
  FIND_PACKAGE(OPENMESH COMPONENTS OpenMeshCored OpenMeshToolsd)
  IF ((NOT OPENMESH_FOUND))
    MESSAGE("Skipping because of missing OPENMESH")
    RETURN()
  ENDIF((NOT OPENMESH_FOUND))
  IF(NOT OPENMESH_USED AND OPENMESH_FOUND)
    SET(OPENMESH_USED TRUE)
    INCLUDE_DIRECTORIES(${OPENMESH_INCLUDE_DIR})
    LINK_DIRECTORIES(${OPENMESH_LINK_DIRECTORY})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${OPENMESH_LIBRARIES})
  ENDIF()
ENDMACRO(USE_OPENMESH)
