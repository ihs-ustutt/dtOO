MACRO(USE_EO)
  SET(EO_FIND_REQUIRED FALSE) 
  FIND_PACKAGE(EO COMPONENTS eoutils eo es ga cma)

  IF ((NOT EO_FOUND))
    USING_MESSAGE("Skipping because of missing EO")
    RETURN()
  ENDIF((NOT EO_FOUND))
  IF(NOT EO_USED AND EO_FOUND)
    SET(EO_USED TRUE)
    INCLUDE_DIRECTORIES(${EO_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${EO_LIBRARIES})
  ENDIF()
ENDMACRO(USE_EO)