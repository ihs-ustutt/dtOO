MACRO(USE_ROOT)
  SET(ROOT_FIND_REQUIRED FALSE) 
  FIND_PACKAGE(ROOT)
  IF ((NOT ROOT_FOUND))
    USING_MESSAGE("Skipping because of missing ROOT")
    RETURN()
  ENDIF((NOT ROOT_FOUND))
  IF(NOT ROOT_USED AND ROOT_FOUND)

    set(ROOT_LIBRARIES "${ROOT_LIBRARIES} -lMathMore")

    SET(ROOT_USED TRUE)
    INCLUDE_DIRECTORIES(${ROOT_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${ROOT_LIBRARIES})
  ENDIF()
ENDMACRO(USE_ROOT)
