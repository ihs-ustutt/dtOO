MACRO(USE_GSL)
  #SET(GSL_FIND_REQUIRED FALSE) 
  FIND_PACKAGE(GSL)
  IF ((NOT GSL_FOUND))
    USING_MESSAGE("Skipping because of missing GSL")
    RETURN()
  ENDIF((NOT GSL_FOUND))
  IF(NOT GSL_USED AND GSL_FOUND)
    SET(GSL_USED TRUE)
    INCLUDE_DIRECTORIES(${GSL_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${GSL_LIBRARIES})
  ENDIF()
ENDMACRO(USE_GSL)
