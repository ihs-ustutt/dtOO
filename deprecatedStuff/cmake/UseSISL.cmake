MACRO(USE_SISL)
  SET(SISL_FIND_REQUIRED FALSE) 
  FIND_PACKAGE(SISL)
  IF ((NOT SISL_FOUND))
    USING_MESSAGE("Skipping because of missing SISL")
    RETURN()
  ENDIF((NOT SISL_FOUND))
  IF(NOT SISL_USED AND SISL_FOUND)
    SET(SISL_USED TRUE)
    INCLUDE_DIRECTORIES(${SISL_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${SISL_LIBRARIES})
  ENDIF()
ENDMACRO(USE_SISL)
