MACRO(USE_MUPARSER)
  SET(MUPARSER_FIND_REQUIRED FALSE) 
  FIND_PACKAGE(MUPARSER)
  IF ((NOT MUPARSER_FOUND))
    USING_MESSAGE("Skipping because of missing muParser")
    RETURN()
  ENDIF((NOT MUPARSER_FOUND))
  IF(NOT MUPARSER_USED AND MUPARSER_FOUND)
    SET(MUPARSER_USED TRUE)
    INCLUDE_DIRECTORIES(${MUPARSER_INCLUDE_DIR})
    SET(EXTRA_LIBS ${EXTRA_LIBS} ${MUPARSER_LIBRARIES})
  ENDIF()
ENDMACRO(USE_MUPARSER)
